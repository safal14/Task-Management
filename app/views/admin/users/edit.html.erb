<h1>Edit User: <%= @user.first_name %> <%= @user.last_name %></h1>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :role, "Change Role" %>
    <%= f.select :role, User.roles.keys.map { |r| [r.capitalize, r] }, {}, class: "form-select" %>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= f.submit "Update User", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>