<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Task Manager" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet">

    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
      <div class="container">
        <%= link_to "Task Manager", root_path, class: "navbar-brand fw-bold" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
              </li>

              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to "Admin Panel", admin_users_path,
                      class: "nav-link text-danger fw-semibold" %>
                </li>
              <% end %>
            <% end %>
          </ul>

          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                  <strong><%= current_user.first_name %></strong>
                  <span class="badge bg-secondary"><%= current_user.role.upcase %></span>
                </a>

                <ul class="dropdown-menu dropdown-menu-end">
                  <li class="dropdown-item-text small text-muted">
                    <%= current_user.email %>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
                  </li>
                  <li>
                    <%= button_to "Sign out",
                        destroy_user_session_path,
                        method: :delete,
                        class: "dropdown-item text-danger bg-transparent border-0 w-100 text-start" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash messages -->
    <main class="container mt-4">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show">
          <%= notice %>
          <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show">
          <%= alert %>
          <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
